<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mcv.control.InserisciRilevazioniController">

   <!-- Logo e titolo -->
   <top>
      <VBox spacing="5" style="-fx-padding: 10 10 0 10;">
         <HBox alignment="CENTER_LEFT">
            <ImageView fitHeight="74.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
               <image><Image url="@logo.jpeg" /></image>
            </ImageView>
         </HBox>
         <HBox alignment="CENTER">
            <Label style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Inserisci Rilevazioni">
               <font><Font name="Arial Bold" size="20.0" /></font>
            </Label>
         </HBox>
         <Separator />
      </VBox>
   </top>

   <!-- Parte centrale -->
   <center>
      <VBox alignment="CENTER" maxWidth="600" prefHeight="430.0" prefWidth="600.0" spacing="15" style="-fx-padding: 20;">

         <HBox spacing="10">
            <VBox prefHeight="145.0" prefWidth="274.0" spacing="10" style="-fx-border-color: #ccc; -fx-padding: 20;">
               <Label style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Data Rilevazione">
                  <font><Font name="Arial" size="16.0" /></font>
               </Label>
               <DatePicker fx:id="rilevazioneCalendar" focusTraversable="false" prefHeight="26.0" prefWidth="232.0">
                  <VBox.margin><Insets top="20.0" /></VBox.margin>
               </DatePicker>
            </VBox>

            <VBox prefHeight="120.0" prefWidth="276.0" spacing="10" style="-fx-border-color: #ccc; -fx-padding: 20;">
               <Label style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Tipologia di pasto">
                  <font><Font name="Arial" size="16.0" /></font>
               </Label>
               <RadioButton fx:id="ColazioneRadioButton" focusTraversable="false" style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Colazione">
                  <font><Font name="Arial" size="13.0" /></font>
               </RadioButton>
               <RadioButton fx:id="PranzoRadioButton" focusTraversable="false" style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Pranzo">
                  <font><Font name="Arial" size="13.0" /></font>
               </RadioButton>
               <RadioButton fx:id="CenaRadioButton" focusTraversable="false" style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Cena">
                  <font><Font name="Arial" size="13.0" /></font>
               </RadioButton>
            </VBox>
         </HBox>

         <HBox alignment="CENTER">
            <VBox prefHeight="218.0" prefWidth="560.0" spacing="20" style="-fx-border-color: #ccc; -fx-padding: 20;">
               <HBox spacing="20">

                  <VBox prefWidth="250" spacing="10">
                     <Label style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Pre-pasto">
                        <font><Font name="Arial" size="16.0" /></font>
                     </Label>
                     <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-text-fill: #797474; -fx-font-family: 'Arial';" text="Glicemia pre-pasto">
                           <font><Font name="Arial" size="13.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="prePastoSliderLabel" style="-fx-text-fill: black; -fx-font-family: 'Arial';">
                           <font><Font name="Arial" size="13.0" /></font>
                        </Label>
                     </HBox>
                     <Slider fx:id="prepastoSlider" blockIncrement="1.0" focusTraversable="false" max="200.0" min="80.0" prefHeight="47.0" prefWidth="254.0" showTickLabels="true" showTickMarks="true" style="-fx-base: #4B788F;" />
                     <Button fx:id="prepastoButton1" onAction="#handleInserisciPrePasto" prefHeight="38.0" prefWidth="249.0" style="-fx-background-color: #4B788F;" text="Inserisci Rilevazione" textFill="WHITE">
                        <font><Font name="Arial" size="13.0" /></font>
                     </Button>
                  </VBox>

                  <VBox prefWidth="250" spacing="10">
                     <Label style="-fx-text-fill: black; -fx-font-family: 'Arial';" text="Post-pasto">
                        <font><Font name="Arial" size="16.0" /></font>
                     </Label>
                     <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label style="-fx-text-fill: #797474; -fx-font-family: 'Arial';" text="Glicemia post-pasto">
                           <font><Font name="Arial" size="13.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="postPastoSliderLabel" style="-fx-text-fill: black; -fx-font-family: 'Arial';">
                           <font><Font name="Arial" size="13.0" /></font>
                        </Label>
                     </HBox>
                     <Slider fx:id="postpastoSlider" blockIncrement="1.0" focusTraversable="false" max="200.0" min="80.0" prefHeight="47.0" prefWidth="254.0" showTickLabels="true" showTickMarks="true" style="-fx-base: #4B788F;" />
                     <Button fx:id="postpastoButton1" onAction="#handleInserisciPostPasto" prefHeight="38.0" prefWidth="249.0" style="-fx-background-color: #4B788F;" text="Inserisci Rilevazione" textFill="WHITE">
                        <font><Font name="Arial" size="13.0" /></font>
                     </Button>
                  </VBox>
               </HBox>
            </VBox>
         </HBox>
      </VBox>
   </center>

   <!-- Bottone indietro -->
   <bottom>
      <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 20 10 10;">
         <Button fx:id="indietroButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #4B788F;" text="Indietro" textFill="WHITE">
            <font><Font name="Arial" size="13.0" /></font>
            <HBox.margin>
               <Insets bottom="5.0" right="15.0" />
            </HBox.margin>
         </Button>
      </HBox>
   </bottom>
</BorderPane>
